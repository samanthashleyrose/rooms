<!-- INPUT FIELDS -->
<div class="form-container">
    <form action="/join-room" method="POST">
        <label for="input">JOIN A ROOM!</label>
        <br>
        <input id="code-input" type="text" placeholder="ENTER CODE HERE" name="code">
        <button type="submit" id="join-btn">join</button>
        <!-- Display error message -->
        {{#if errorMessage}}
        <p id="error-message">{{errorMessage}}</p>
        {{/if}}
    </form>
</div>
<script src="/js/join-room.js"></script>